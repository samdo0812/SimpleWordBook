<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sdstudio.simplewordbook">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_2_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ImexportActivity"></activity>
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/addmob_id"/>
        <activity
            android:name=".activity.WorddetailActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
             />
        <activity
            android:name=".activity.WordPlayActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.WordListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>