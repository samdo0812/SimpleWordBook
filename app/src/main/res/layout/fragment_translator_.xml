<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".fragment.Translator_Frag">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bolder"
            android:orientation="vertical">

            <LinearLayout
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출발언어"
                    android:textColor="#ffffff" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:spinnerMode="dialog"
                    android:id="@+id/spinner_front"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
            </LinearLayout>

            <EditText
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:background="@null"
                android:gravity="top"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:id="@+id/input_word"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bolder"
            android:orientation="vertical">

            <LinearLayout
                android:weightSum="5"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="도착언어"
                    android:textColor="#ffffff" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_weight="3.5"
                    android:spinnerMode="dialog"
                    android:id="@+id/spinner_back"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp" />
                <ImageButton
                    android:id="@+id/copy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_file_copy_24">

                </ImageButton>
            </LinearLayout>

            <TextView
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:id="@+id/output_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:scaleType="fitCenter"
        android:layout_margin="15dp"
        android:background="@drawable/ic_baseline_repeat_24"
        android:id="@+id/translate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="button" />


</LinearLayout>